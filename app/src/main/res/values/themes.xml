<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ChatScreen" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_default</item>
        <item name="colorPrimaryVariant">@color/primary_default</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/accent_theme</item>
        <item name="colorSecondaryVariant">@color/accent_theme</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_message_screen</item>
        <item name="colorSurface">@color/background_base</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_base</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_base</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Error color -->
        <item name="colorError">@color/system_danger</item>
        <item name="colorOnError">@color/white</item>
    </style>
</resources>
