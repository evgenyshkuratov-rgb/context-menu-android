<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <!-- Reaction Bar Panel (separate floating panel, full width with 8dp side margins) -->
    <LinearLayout
        android:id="@+id/reactionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_reaction_bar"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/reaction1"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_reaction_item"
                android:gravity="center"
                android:text="ðŸ‘"
                android:textSize="28sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/reaction2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_reaction_item"
                android:gravity="center"
                android:text="ðŸ‘Ž"
                android:textSize="28sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/reaction3"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_reaction_item"
                android:gravity="center"
                android:text="ðŸ”¥"
                android:textSize="28sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/reaction4"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_reaction_item"
                android:gravity="center"
                android:text="ðŸ‘Œ"
                android:textSize="28sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/reaction5"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_reaction_item"
                android:gravity="center"
                android:text="ðŸ¤”"
                android:textSize="28sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/btnAddReaction"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_add_reaction_button"
                android:padding="7dp"
                android:src="@drawable/ic_plus"
                app:tint="@color/text_primary_55" />

        </FrameLayout>

    </LinearLayout>

    <!-- Main Bottom Sheet Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Drag Handle -->
        <View
            android:layout_width="36dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_drag_handle" />

        <!-- Action List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Reply -->
        <LinearLayout
            android:id="@+id/actionReply"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_action_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_reply"
                app:tint="@color/text_primary_55" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:text="@string/action_reply"
                android:textColor="@color/text_primary"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Forward -->
        <LinearLayout
            android:id="@+id/actionForward"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_action_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_forward"
                app:tint="@color/text_primary_55" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:text="@string/action_forward"
                android:textColor="@color/text_primary"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Comment -->
        <LinearLayout
            android:id="@+id/actionComment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_action_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_comment"
                app:tint="@color/text_primary_55" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:text="@string/action_comment"
                android:textColor="@color/text_primary"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Pin -->
        <LinearLayout
            android:id="@+id/actionPin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_action_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pin"
                app:tint="@color/text_primary_55" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:text="@string/action_pin"
                android:textColor="@color/text_primary"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Copy -->
        <LinearLayout
            android:id="@+id/actionCopy"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_action_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_copy"
                app:tint="@color/text_primary_55" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:text="@string/action_copy"
                android:textColor="@color/text_primary"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Add Label -->
        <LinearLayout
            android:id="@+id/actionAddLabel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_action_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tag"
                app:tint="@color/text_primary_55" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:text="@string/action_add_label"
                android:textColor="@color/text_primary"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Save -->
        <LinearLayout
            android:id="@+id/actionSave"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_action_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_saved"
                app:tint="@color/text_primary_55" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:text="@string/action_save"
                android:textColor="@color/text_primary"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Viewed -->
        <LinearLayout
            android:id="@+id/actionViewed"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_action_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_read_done"
                app:tint="@color/text_primary_55" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:text="@string/action_viewed"
                android:textColor="@color/text_primary"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Select -->
        <LinearLayout
            android:id="@+id/actionSelect"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_action_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_outline"
                app:tint="@color/text_primary_55" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:text="@string/action_select"
                android:textColor="@color/text_primary"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Delete (Red) -->
        <LinearLayout
            android:id="@+id/actionDelete"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_action_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:text="@string/action_delete"
                android:textColor="@color/system_danger"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>
