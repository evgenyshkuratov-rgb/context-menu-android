<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/message_spacing">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/message_avatar_size"
        android:layout_height="@dimen/message_avatar_size"
        android:scaleType="centerCrop"
        android:contentDescription="@string/cd_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/avatar_1" />

    <!-- Bubble Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bubbleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/avatar_bubble_spacing"
        android:background="@drawable/bg_bubble_incoming"
        android:maxWidth="@dimen/bubble_max_width_incoming"
        app:layout_constraintStart_toEndOf="@id/ivAvatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constrainedWidth="true">

        <!-- Sender Name -->
        <TextView
            android:id="@+id/tvSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bubble_padding_vertical"
            android:layout_marginStart="@dimen/bubble_padding_horizontal"
            android:layout_marginEnd="@dimen/bubble_padding_horizontal"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Анна Ковалёва"
            tools:textColor="@color/avatar_10" />

        <!-- Message Text -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_spacing_medium"
            android:layout_marginStart="@dimen/bubble_padding_horizontal"
            android:layout_marginEnd="@dimen/bubble_padding_horizontal"
            android:textColor="@color/text_primary_90"
            android:textSize="15sp"
            android:lineSpacingExtra="2sp"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@id/tvSenderName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constrainedWidth="true"
            tools:text="Доброе утро! Напоминаю, что завтра крайний срок." />

        <!-- Time Label -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="@dimen/bubble_padding_vertical"
            android:textColor="@color/text_primary_50"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@id/tvMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="13:26" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
